{% extends 'home_base.html.twig' %}

{% block title %}Control Panel{% endblock %}


{% block body %}

<div class='container-fluid'>
    <div class='row'>
        <div class='col-xl-2 col-lg-6 col-md-4 col-sm-12 col-xs-12'>
            <table class='table table-striped table-bordered'>
                <thead>
                    <tr>
                        <th>{{user.role|capitalize}} #{{ user.id }}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ user.nachname }}, {{ user.vorname }}</td>
                    </tr>
                    <tr>
                        <td>{{ user.email }}</td>
                    </tr>
                </tbody>    
            </table>
        </div>
        <div class='col-xl-2 col-lg-6 col-md-8 col-sm-12 col-xs-12'>
            <h3>Coaches</h3>
            {% for coach in allJobCoaches %}
            <div class="card" style="width: 22rem;">
            
            <div class="card-body">
                <h5 class="card-title">{{ coach.nachname }}, {{coach.vorname }}</h5>
                <p class="card-text">
                    {{ coach.email }}<br>
                    {{ coach.telefonnummer }}
                </p>
                <a href="{{ path('app_adminpanel_coach',{'id': coach.id}) }}" class="btn btn-outline-secondary btn-sm">Details</a>
            </div>

            </div>
            
            {% endfor %}
        </div>
        
    </div>
</div>

{% endblock %}
